# Database - SQLite .db file path (default: ./auth.db)
# DATABASE_PATH=./auth.db

# Better Auth - generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-here
# Base URL for auth - production: https://ember.st3ix.net | local: http://localhost:3000
BETTER_AUTH_URL=https://ember.st3ix.net

# Discord OAuth - from https://discord.com/developers/applications
# Redirect URL (production): https://ember.st3ix.net/api/auth/callback/discord
DISCORD_CLIENT_ID=your-client-id
DISCORD_CLIENT_SECRET=your-client-secret

# Licenses API - token for X-Ember-Token header, URL (optional, default: http://45.131.115.18:20002/user-licenses)
X_EMBER_TOKEN=your-ember-token
# LICENSES_API_URL=http://45.131.115.18:20002/user-licenses

# Stats API - external domain to fetch stats from (server-side proxy)
# Expected JSON: { licenses, averageReview, happyCustomers, projectsDelivered }
STATS_API_URL=https://your-stats-api.com/api/stats

# Discord - /discord route redirects here
DISCORD_URL=https://discord.com/invite/your-server
# St3ix profile link in footer (default: discord.com/users/1451891299396616206)
DISCORD_ST3IX_URL=https://discord.com/users/1451891299396616206
